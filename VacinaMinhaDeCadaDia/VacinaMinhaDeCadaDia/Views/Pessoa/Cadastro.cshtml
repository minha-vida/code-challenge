@model VacinaMinhaDeCadaDia.ViewModel.PessoaViewModel
@{
    ViewData["Title"] = "Cadastro";
}

<h2>Cadastro</h2>
<hr />

@using (@Html.BeginForm("Cadastrar", "Pessoa", FormMethod.Post))
{
<div class="col-xs-12">
    <div class="col-xs-12 col-md-6">
        <div class="form-group ">
            <img src="@(Model == null ? "https://staticcdn.selio.com/adoos-static/img/user_default.png" : Model.Foto)" alt="..." class="img-pessoa img-rounded">
        </div>
        <div class="form-group ">
            <label for="Nome">Nome:</label>
            @Html.TextBoxFor(x => x.Nome, new { Id = "Nome", Class = "form-control" })
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="form-group ">
            <label for="Idade">Idade:</label>
            @Html.TextBoxFor(x => x.Idade, new { Id = "Idade", Class = "form-control" })
            @Html.ValidationMessageFor(x => x.Idade)
        </div>
        <div class="form-group ">
            <label for="Foto">Foto:</label>
            @Html.TextBoxFor(x => x.Foto, new { Id = "Foto", Class = "form-control" })
            @Html.ValidationMessageFor(x => x.Foto)
        </div>
        <input class="btn btn-primary btn-lg" type="submit" value="Cadastrar">
   
    </div>
</div>
}

