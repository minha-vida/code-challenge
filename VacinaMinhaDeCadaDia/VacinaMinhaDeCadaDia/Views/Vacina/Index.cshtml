
@{
    ViewData["Title"] = "Index";
}
<h2 class="title">Vacinas</h2>
<hr />

<div class="wrapper">
    <div class="table-responsive table-vacina">
        <table class="table table-striped" id="listagem-vacinas">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Criada em</th>
                    <th>Alterada em</th>
                    <th class="col-xs-1">Ações</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="modal-excluir">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modal-titulo">Deseja mesmo excluir?</h4>
            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <button type="button" class="btn btn-success" id="modal-btn-sim" data-id="">Sim</button>
                    <button type="button" class="btn btn-danger" id="modal-btn-nao">Não</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-xs-12 text-center">
    <a class="btn btn-primary btn-lg" href="@Url.Action("Cadastrar","Vacina")">Cadastro</a>
</div>

@section Scripts {
    <script src="@Url.Content("~/js/Vacina/Vacina-ui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/Vacina/Vacina.js")" type="text/javascript"></script>

    <script type="text/x-jsrender" id="listagem-template">
        <tr>
            <td>{{:nome}}</td>
            <td>{{:criadaEm}}</td>
            <td>{{:alteradaEm}}</td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        Ações <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li><a href="@(Url.Action("Cadastrar", "Vacina"))/{{:id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Editar</a></li>
                        <li><a href="#" id="Excluir" data-id="{{:id}}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>Excluir</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    </script>

    <script type="text/x-jsrender" id="sem-resultado-template">
        <tr>
            <td colspan="100%">
                <div class="alert alert-danger">Nenhum resultado encontrado</div>
            </td>
        </tr>
    </script>
}

