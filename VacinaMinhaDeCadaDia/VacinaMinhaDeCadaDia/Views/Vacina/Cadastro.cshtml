@model VacinaMinhaDeCadaDia.ViewModel.VacinaViewModel
@{
    ViewData["Title"] = "Cadastro";
}
<h2>Cadastro</h2>
@using (@Html.BeginForm("Cadastrar", "Vacina", FormMethod.Post))
{
    <div class="col-xs-12">
        <div class="col-xs-12 col-md-6">
            <div class="form-group ">
                <label for="Nome">Nome:</label>
                @Html.TextBoxFor(x => x.Nome, new { Id = "Nome", Class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <div class="form-group">
                <label for="CriadaEm">Criada em:</label>
                @Html.TextBoxFor(x => x.CriadaEm, new { Id = "CriadaEm", Class = "form-control" })
                @Html.ValidationMessageFor(x => x.CriadaEm)
            </div>
            <input class="btn btn-primary btn-lg" type="submit" value="Cadastrar">
        </div>
    </div>
}

@section Scripts {
    <script>
        var selector = document.getElementById("CriadaEm");
        var im = new Inputmask({ alias: "datetime", inputFormat: "dd/mm/yyyy" , placeholder: "dd/mm/aaaa" });
        im.mask(selector);
    </script>
}