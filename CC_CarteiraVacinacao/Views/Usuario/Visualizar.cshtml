@model CC_CarteiraVacinacao.Models.UsuarioModel
@{
    ViewData["Title"] = "Visualizar";
}

<h3 class="">Dados Cadastrais</h3>
<br />
<div class="col-md-12">
    <div class="col-xs-12 col-md-4">
        <img src="@Model.ProfilePhoto" onerror="this.src='https://image.flaticon.com/icons/svg/16/16480.svg'" width="180" height="180" id="profile_img" class="img-responsive img-circle" />
        <br />
    </div>
    <div class="col-xs-12 col-md-8">
        <br />
        <label for="EmailUser">E-Mail:</label>
        <span name="Email" id="EmailUser">@Model.Email</span>
        <br />
        <label for="NameUser">Nome:</label>
        <span name="Name" id="NameUser">@Model.Name</span>
        <br />
        <label for="BirthUser">Data de Nascimento:</label>
        <span name="DateOfBirth" id="BirthUser">@Model.DateOfBirth.ToString("dd/MM/yyyy") - @(DateTime.Now.Year - Model.DateOfBirth.Year) Anos.</span>
        <br />
        <label for="PassUser">Senha:</label>
        <label name="Pass" id="PassUser">********</label>
        <br />
        <a href="@Url.Action("Editar", "Usuario")" class="btn btn-primary" id="Update_Sent">Editar Usuário</a>
        <a href="@Url.Action("AltSenha", "Usuario")" class="btn btn-default" id="Update_Pass">Alterar Senha</a>
        <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#ModalDeact" id="Deactivate_User">Desativar Usuário</a>
    </div>
</div>
<div id="ModalDeact" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Reaaaaaally? Do u REAAAAAAAALLY?</h4>
            </div>
            <div class="modal-body">
                <h4>Quer realmente desativar?</h4>
            </div>
            <div class="modal-footer">
                <form method="post" action="@Url.Action("DeactivateUser","Usuario")">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <input type="submit" id="Deact_OK" class="btn btn-primary" value="OK" />
                </form>
            </div>
        </div>
    </div>
</div>
