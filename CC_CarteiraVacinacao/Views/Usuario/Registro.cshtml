@model CC_CarteiraVacinacao.Models.UsuarioModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<div class="col-md-12">
    <form action="/Usuario/CreateUser/" class="form-group" id="Register" method="post">
        @Html.AntiForgeryToken()
        <label for="EmailUser">E-Mail:</label>
        <input type="text" name="Email" id="EmailUser" class="form-control" />
        <br />
        <label for="NameUser">Nome:</label>
        <input type="text" name="Name" id="NameUser" class="form-control" />
        <br />
        <label for="PassUser">Senha:</label>
        <input type="text" name="Password" id="PassUser" class="form-control" />
        <br />
        <label for="BirthUser">Data de Nascimento</label>
        <input type="text" name="DateOfBirth" id="BirthUser" class="form-control" />
        <br />
        <label for="PhotoUser">Foto de Perfil:</label>
        <input type="text" name="ProfilePhoto" id="PhotoUser" class="form-control" />
        <br />
        <input type="submit" class="btn btn-default" id="SendUser" />
    </form>
</div>
